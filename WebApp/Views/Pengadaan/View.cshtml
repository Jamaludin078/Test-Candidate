@model Web.Data.Models.Database.PengadaanHeader

@{
	ViewData["Title"] = "Pengadaan";
	Layout = "~/Views/Shared/_LayoutLTE.cshtml";
}

<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				@*<h1>Add Person</h1>*@
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
					<li class="breadcrumb-item active">Pengadaan</li>
				</ol>
			</div>
		</div>
	</div><!-- /.container-fluid -->
</section>

<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="card card-primary">
					<div class="card-header">
						<h3 class="card-title">Header</h3>
					</div>
					<div class="card-body">
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label>Nama Pengadaan</label>
									<input type="text" asp-for="pengadaan_name" class="form-control" id="pengadaan_name" disabled />
								</div>
								<div class="form-group">
									<label>Kategori</label>
									<select class="form-control select2" asp-for="pengadaan_kategori" id="pengadaan_kategori" asp-items="@ViewBag.KategoriList" style="width: 100%;" disabled>
									</select>
								</div>
							</div>

							<div class="col-md-6">
								<div class="form-group">
									<label>Target Date</label>
									<input type="date" asp-for="tanggal_butuh" class="form-control" id="tanggal_butuh" disabled />
								</div>
							</div>
						</div>
					</div>
					<div class="card-footer">
					</div>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-12">
				<div class="card card-primary">
					<div class="card-header">
						<h3 class="card-title">Detail</h3>
					</div>
					<form>
						<div class="card-body">
							<table id="tbl-items" class="table table-bordered table-hover">
								<thead>
									<tr>
										<th>No</th>
										<th>Name</th>
										<th>Spesifikasi</th>
										<th>Qty</th>
									</tr>
								</thead>
								<tbody>
									@{
										int num = 1;
										foreach (var m in Model.PengadaanDetails)
										{
											<tr>
												<td>@num</td>
												<td>@Html.DisplayFor(modelItem => m.nama_item)</td>
												<td>@Html.DisplayFor(modelItem => m.spesifikasi_item)</td>
												<td>
													@Html.DisplayFor(modelItem => m.jumlah)
												</td>
											</tr>
											num++;
										}
									}
								</tbody>
							</table>

						</div>
					</form>

					<div class="card-footer">
						<div class="float-right">
							<input class="btn btn-primary" type="submit" id="btn-save" value="Save" />
							<a class="btn btn-warning" asp-action="Index">Back</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<section>
	<div class="modal fade" id="modal-default" data-keyboard="false" data-backdrop="static">
		<div class="modal-dialog modal-lg">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title">Default Modal</h4>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<div class="row">
						<div class="col-md-4">
							<div class="form-group">
								<label>Name</label>
								<input type="text" id="nama-item" class="form-control" />
							</div>
						</div>

						<div class="col-md-4">
							<div class="form-group">
								<label>Spesifikasi</label>
								<input type="text" id="spesifikasi" class="form-control" />
							</div>
						</div>

						<div class="col-md-4">
							<div class="form-group">
								<label>Qty</label>
								<input type="text" id="qty" class="form-control" />
							</div>
						</div>
					</div>
					<div class="row">
					</div>
				</div>
			</div>
			<!-- /.modal-content -->
		</div>
		<!-- /.modal-dialog -->
	</div>
</section>

@section Scripts{

}