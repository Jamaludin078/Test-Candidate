@model Web.Data.Models.Database.Kategori

@{
	ViewData["Title"] = "Kategori";
	Layout = "~/Views/Shared/_LayoutLTE.cshtml";
}

<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				@*<h1>Kategori</h1>*@
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a href="#">Home</a></li>
					<li class="breadcrumb-item active">Kategori</li>
				</ol>
			</div>
		</div>
	</div><!-- /.container-fluid -->
</section>

<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="card card-primary">
					<div class="card-header">
						<h3 class="card-title">Kategori</h3>
						<div class="card-tools">
						</div>
					</div>
					<form class="form-horizontal form-ajax" asp-action="AddEdit" asp-controller="Kategori"
						  enctype="multipart/form-data"
						  data-redirect="@Url.RouteUrl(new { action = "index", controller = "kategori", area = "" })">
						<div class="card-body">
							<div class="row">
								<div class="col-md-6">
									<div class="form-group">
										<input type="hidden" asp-for="kategori_id" class="form-control" placeholder="Id" />
									</div>
									<div class="form-group">
										<label>Nama Kategori</label>
										<input type="text" asp-for="nama_kategori" class="form-control" required />
									</div>
								</div>
							</div>
						</div>
						<div class="card-footer">
							<div class="float-right">
								<input class="btn btn-primary" type="submit" value="Save" />
								<a class="btn btn-warning" asp-action="Index">Back</a>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>

@section Scripts{
	<script type="text/javascript">
	</script>
    }